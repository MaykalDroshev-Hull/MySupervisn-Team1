<Window x:Class="MySupervisn_Team1.BookMeeting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" 
        xmlns:local="clr-namespace:MySupervisn_Team1"
        mc:Ignorable="d" ResizeMode="NoResize" Closing="DataWindow_Closing"  
        Icon="Visuals/icon.png"
        Title="BookMeeting" Height="287.95" Width="236.565">
    <Grid>
        <StackPanel >
            <Label Content="Subject"/>
            <TextBox x:Name="Subject" Width="200" HorizontalAlignment="Left" Margin="10,5"/>
            <Label Content="Date"/>
            <DatePicker Name="_Datetime" Margin="10,5"/>
            <Label Content="Time"/>
            <TextBox x:Name="Time" Width="200" HorizontalAlignment="Left" Margin="10,5"/>
            <Label Content="Who to meet with"/>
            <TextBox x:Name="people" Width="200" HorizontalAlignment="Left" Margin="10,5"/>
            <StackPanel Orientation="Horizontal">
                <Label/>
                <Button x:Name="GoBack" Content="Go back" Width="100" Click="GoBack_Click" />
                <Label/>
                <Button x:Name="Set" Content="Accept" Width="100" Click="Set_Click"/>
            </StackPanel>



        </StackPanel>
    </Grid>
</Window>
